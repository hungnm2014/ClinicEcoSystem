<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.company.ces.web.staff.StaffEdit"
        datasource="staffDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.ces.web.staff">
    <dsContext>
        <datasource id="staffDs"
                    class="com.company.ces.entity.category.Staff"
                    view="staff-view"/>
    </dsContext>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    align="BOTTOM_LEFT"
                    border="visible"
                    datasource="staffDs"
                    width="759px">
            <column width="250px">
                <field id="department"/>
                <field id="licenseId"/>
                <field id="sex"/>
                <field id="posistion"/>
                <field id="workphone"/>
                <field id="degree"/>
                <field id="imageFileId"
                       editable="false"
                       visible="false"/>
            </column>
            <column width="250px">
                <field id="fullname"/>
                <field id="dateofbirth"/>
                <field id="title"/>
                <field id="address"/>
                <field id="homephone"/>
                <field id="email">
                    <validator class="com.haulmont.cuba.gui.components.validators.EmailValidator"
                               message="msg://email.alert"/>
                </field>
            </column>
        </fieldGroup>
        <groupBox align="MIDDLE_LEFT"
                  caption="Photo"
                  expand="embeddedImage"
                  height="250px"
                  spacing="true"
                  width="300px">
            <embedded id="embeddedImage"
                      align="MIDDLE_CENTER"/>
            <hbox align="BOTTOM_CENTER"
                  spacing="true">
                <upload id="uploadField"/>
                <button id="downloadImageBtn"
                        caption="msg://Download"
                        invoke="onDownloadImageBtnClick"/>
                <button id="clearImageBtn"
                        caption="msg://Clear"
                        invoke="onClearImageBtnClick"/>
            </hbox>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
